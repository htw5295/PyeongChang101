<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_selectmode"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_01" />

    <Button
        android:id="@+id/people_2_btn_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:background="@drawable/people_2_btn_small"
        android:onClick="onClickMode" />

    <TextView
        android:id="@+id/mode_text00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2인"
        android:textAlignment="center"
        android:textColor="#7B7B7B"
        android:textSize="14.25sp"
        android:textStyle="bold"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/people_2_btn_small"
        android:layout_alignStart="@+id/people_2_btn_small"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/people_4_btn_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/people_4_btn_small"
        android:onClick="onClickMode" />

    <TextView
        android:id="@+id/mode_text01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4인"
        android:textAlignment="center"
        android:textColor="#7B7B7B"
        android:textSize="14.25sp"
        android:textStyle="bold"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/people_4_btn_small"
        android:layout_alignStart="@+id/people_4_btn_small"
        android:layout_marginBottom="15dp" />

</RelativeLayout>