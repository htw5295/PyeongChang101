<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="360dp"
    android:layout_marginTop="20dp"
    android:clickable="true"
    android:onClick="onClickPlayer">

    <ImageView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/card_man_small" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:text="김선수(21)"
        android:textSize="12.75sp" />

    <TextView
        android:id="@+id/stamina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="171dp"
        android:textColor="#0AC0F1"
        android:textSize="15.75sp" />

    <TextView
        android:id="@+id/strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/card"
        android:layout_alignTop="@+id/card"
        android:layout_marginRight="30dp"
        android:layout_marginTop="171dp"
        android:textColor="#0AC0F1"
        android:textSize="15.75sp" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="228dp"
        android:textColor="#0AC0F1"
        android:textSize="15.75sp" />

    <TextView
        android:id="@+id/mental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/card"
        android:layout_alignTop="@+id/card"
        android:layout_marginRight="30dp"
        android:layout_marginTop="228dp"
        android:textColor="#0AC0F1"
        android:textSize="15.75sp" />

    <Button
        android:id="@+id/check"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/unselected_check_btn" />

</RelativeLayout>