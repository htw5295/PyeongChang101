<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_healing"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/stampmap_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/stampmap_popup" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/stampmap_popup"
            android:layout_alignRight="@+id/stampmap_popup"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:onClick="onClickItemBox"
            android:background="@drawable/itembox_btn" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/item_popup01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/itembox_popup_for_item1" />

        <ImageView
            android:id="@+id/item_popup04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/itembox_popup_for_item4" />

        <Button
            android:id="@+id/item01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/seleted_item1"
            android:onClick="onClickItem01" />

        <Button
            android:id="@+id/item02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_popup01"
            android:layout_alignLeft="@+id/item01"
            android:layout_alignStart="@+id/item01"
            android:layout_marginBottom="33dp"
            android:background="@drawable/unseleted_item2"
            android:onClick="onClickItem02" />

        <Button
            android:id="@+id/item03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item01"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/item01"
            android:layout_toRightOf="@+id/item01"
            android:background="@drawable/unseleted_item3"
            android:onClick="onClickItem03" />

        <Button
            android:id="@+id/item04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item02"
            android:layout_alignBottom="@+id/item02"
            android:layout_alignLeft="@+id/item03"
            android:layout_alignStart="@+id/item03"
            android:background="@drawable/unseleted_item4"
            android:onClick="onClickItem04" />

        <Button
            android:id="@+id/stampmap_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/item_popup01"
            android:layout_alignRight="@+id/item_popup01"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:onClick="onClickStamp"
            android:background="@drawable/stampmap_btn" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bg_04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_05" />

            <Button
                android:id="@+id/home_btn"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_btn"
                android:onClick="onClickHome" />

            <Button
                android:id="@+id/items_btn"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="110dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/items_btn"
                android:onClick="onClickItem" />

            <Button
                android:id="@+id/setting_btn"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/setting_btn" />

            <Button
                android:id="@+id/jungsun_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/home_btn"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/home_btn"
                android:layout_marginTop="140dp"
                android:background="@drawable/jungsun_btn_small"
                android:onClick="onClickJungsun" />

            <Button
                android:id="@+id/pyeongchang_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:background="@drawable/pyeongchang_btn_small"
                android:onClick="onClickPyeongchang"
                android:visibility="invisible" />

            <Button
                android:id="@+id/gangneung_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/setting_btn"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/setting_btn"
                android:layout_marginTop="140dp"
                android:background="@drawable/gangneung_btn_small"
                android:onClick="onClickGangneung" />

            <Button
                android:id="@+id/jungsun_btn_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/jungsun_btn_big"
                android:onClick="onClickJungsun"
                android:visibility="invisible" />

            <Button
                android:id="@+id/pyeongchang_btn_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:background="@drawable/pyeongchang_btn_big"
                android:onClick="onClickPyeongchang"
                android:visibility="visible" />

            <Button
                android:id="@+id/gangneung_btn_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/gangneung_btn_big"
                android:onClick="onClickGangneung"
                android:visibility="invisible" />

            <Button
                android:id="@+id/food_btn"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="245dp"
                android:layout_marginStart="245dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/selected_food_btn"
                android:onClick="onClickFood" />

            <Button
                android:id="@+id/area_btn"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="242dp"
                android:layout_marginRight="242dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/unselected_area_btn"
                android:onClick="onClickArea" />

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="375dp"
                android:background="@drawable/search_bar" />

            <Button
                android:id="@+id/xmark_btn"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/search_bar"
                android:layout_marginRight="50dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/xmark_for_search" />

            <Button
                android:id="@+id/go_btn00"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="500dp"
                android:background="@drawable/gogo_btn" />

            <Button
                android:id="@+id/go_btn01"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/go_btn00"
                android:layout_marginRight="50dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/gogo_btn" />

            <Button
                android:id="@+id/go_btn02"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/go_btn01"
                android:layout_marginRight="50dp"
                android:layout_marginTop="85dp"
                android:background="@drawable/gogo_btn" />

            <ImageView
                android:id="@+id/gps_no_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/gps_no_popup"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>