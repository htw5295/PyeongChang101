<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_healing"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bg_04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_05"/>

            <Button
                android:id="@+id/home_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_btn"
                android:onClick="onClickHome" />

            <Button
                android:id="@+id/items_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="110dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/items_btn" />

            <Button
                android:id="@+id/setting_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/setting_btn" />

            <Button
                android:id="@+id/jungsun_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="140dp"
                android:layout_alignLeft="@+id/home_btn"
                android:layout_alignStart="@+id/home_btn"
                android:background="@drawable/jungsun_btn_small"
                android:onClick="onClickJungsun" />

            <Button
                android:id="@+id/pyeongchang_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:background="@drawable/pyeongchang_btn_small"
                android:onClick="onClickPyeongchang"
                android:visibility="invisible" />

            <Button
                android:id="@+id/gangneung_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="140dp"
                android:layout_alignRight="@+id/setting_btn"
                android:layout_alignEnd="@+id/setting_btn"
                android:background="@drawable/gangneung_btn_small"
                android:onClick="onClickGangneung" />

            <Button
                android:id="@+id/jungsun_btn_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/jungsun_btn_big"
                android:onClick="onClickJungsun"
                android:visibility="invisible" />

            <Button
                android:id="@+id/pyeongchang_btn_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:background="@drawable/pyeongchang_btn_big"
                android:onClick="onClickPyeongchang"
                android:visibility="visible" />

            <Button
                android:id="@+id/gangneung_btn_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/gangneung_btn_big"
                android:onClick="onClickGangneung"
                android:visibility="invisible" />

            <Button
                android:id="@+id/food_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="265dp"
                android:layout_marginStart="265dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/selected_food_btn"
                android:onClick="onClickFood" />

            <Button
                android:id="@+id/area_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="265dp"
                android:layout_marginRight="265dp"
                android:layout_marginTop="270dp"
                android:background="@drawable/unselected_area_btn"
                android:onClick="onClickArea" />

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="375dp"
                android:background="@drawable/search_bar" />

            <Button
                android:id="@+id/xmark_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/search_bar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="23dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/xmark_for_search" />

            <Button
                android:id="@+id/go_btn00"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="500dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/gogo_btn"/>

            <Button
                android:id="@+id/go_btn01"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@+id/go_btn00"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="80dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/gogo_btn"/>

            <Button
                android:id="@+id/go_btn02"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_below="@+id/go_btn01"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="85dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/gogo_btn"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>