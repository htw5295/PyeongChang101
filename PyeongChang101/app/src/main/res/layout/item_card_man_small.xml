<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/card_man_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/card_man_small" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card_man_small"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:text="김선수(21)"
        android:textColor="#909090"
        android:textSize="12.75sp" />

    <TextView
        android:id="@+id/stamina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/card_man_small"
        android:layout_alignTop="@+id/card_man_small"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="170dp"
        android:text="50"
        android:textColor="#0AC0F1"
        android:textSize="15.75sp" />

    <TextView
        android:id="@+id/strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/card_man_small"
        android:layout_alignTop="@+id/card_man_small"
        android:layout_marginRight="30dp"
        android:layout_marginTop="170dp"
        android:text="45"
        android:textColor="#0AC0F1"
        android:textSize="15.75sp" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/card_man_small"
        android:layout_alignTop="@+id/card_man_small"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="230dp"
        android:text="50"
        android:textColor="#0AC0F1"
        android:textSize="15.75sp" />

    <TextView
        android:id="@+id/mental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/card_man_small"
        android:layout_alignTop="@+id/card_man_small"
        android:layout_marginRight="30dp"
        android:layout_marginTop="230dp"
        android:text="45"
        android:textColor="#0AC0F1"
        android:textSize="15.75sp" />

</RelativeLayout>